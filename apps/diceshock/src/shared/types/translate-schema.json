{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://example.com/schemas/translate.json",
	"title": "Translate File",
	"type": "object",
	"additionalProperties": false,
	"patternProperties": {
		"^\\$schema$": { "type": "string" }
	},
	"properties": {
		"translation": {
			"$ref": "#/definitions/TranslationNode",
			"description": "递归翻译树：键为字符串，值为字符串或子节点"
		},
		"timezone": {
			"type": "object",
			"description": "时区映射：键形如 `${string}/${string}`，值为字符串",
			"patternProperties": {
				"^[^/]+/[^/]+$": { "type": "string" }
			},
			"additionalProperties": false
		}
	},
	"required": ["translation", "timezone"],
	"definitions": {
		"TranslationNode": {
			"type": "object",
			"patternProperties": {
				".*": {
					"oneOf": [
						{ "type": "string" },
						{ "$ref": "#/definitions/TranslationNode" }
					]
				}
			},
			"additionalProperties": false
		}
	}
}
